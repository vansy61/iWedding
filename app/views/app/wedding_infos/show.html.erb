
<%= form_with model: [:app, @wedding_info] do |f| %>
<div class="grid grid-cols-4 gap-4 w-full">
    <div class="col-span-4 bg-white p-4 shadow-sm rounded-md">
        <div>
            <h3 class="font-semibold">Thông tin lễ cưới</h3>
        </div>
    </div>
    <div class="col-span-4">
        <div class="flex flex-col bg-white border shadow-sm rounded-md">
            <div class="bg-gray-50 border-b rounded-t-md p-3 md:py-3 md:px-5">
                <h5>Thông tin chung</h5>
            </div>
            <div class="p-4 md:p-5">
            </div>
        </div>

    </div>
    <div class="col-span-2">
        <div class="flex flex-col bg-white border shadow-sm rounded-md">
            <div class="bg-gray-50 border-b rounded-t-md p-3 md:py-3 md:px-5">
                <h5>Thông tin chú rể</h5>
            </div>
            <div class="p-4 md:p-5">
                <div class="grid grid-cols-12 gap-4">
                    <% [:groom_name, :groom_address, :groom_dad, :groom_mom].each do |field_name| %>
                        <%= render "app/shared/form/block_input_text", f: f, field_name: field_name, wrapper_class: "col-span-6" %>
                    <% end %>
                    <%= render "app/shared/form/block_text_area", f: f, field_name: :groom_bio, wrapper_class: "col-span-12" %>
                    <%= render "app/shared/form/block_input_file", f: f, field_name: :groom_avatar, wrapper_class: "col-span-6 text-center" %>
                    <%= render "app/shared/form/block_input_file", f: f, field_name: :groom_qr, wrapper_class: "col-span-6 text-center" %>
                </div>
            </div>
        </div>

    </div>
    <div class="col-span-2">
        <div class="flex flex-col bg-white border shadow-sm rounded-md">
            <div class="bg-gray-50 border-b rounded-t-md p-3 md:py-3 md:px-5">
                <h5>Thông tin cô dâu</h5>
            </div>
            <div class="p-4 md:p-5">
                <div class="grid grid-cols-12 gap-4">
                    <% [:bride_name, :bride_address, :bride_dad, :bride_mom].each do |field_name| %>
                        <%= render "app/shared/form/block_input_text", f: f, field_name: field_name, wrapper_class: "col-span-6" %>
                    <% end %>
                    <%= render "app/shared/form/block_text_area", f: f, field_name: :bride_bio, wrapper_class: "col-span-12" %>
                    <%= render "app/shared/form/block_input_file", f: f, field_name: :bride_avatar, wrapper_class: "col-span-6 text-center" %>
                    <%= render "app/shared/form/block_input_file", f: f, field_name: :bride_qr, wrapper_class: "col-span-6 text-center" %>
                </div>
            </div>
        </div>

    </div>

    <div class="col-span-4 text-center">
        <%= render "app/shared/button/btn_solid_color", class_name: "bg-green-600 hover:bg-green-700 focus:bg-green-700" do %>
            Cập Nhật
        <% end %>

    </div>
</div>
<% end %>